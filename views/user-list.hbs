<!DOCTYPE html>
<html>
  <head>
      <style>
        body { margin: 20; background: #222; color: #fafafa; font-family: 'Arial Nova', sans-serif; }
        button { margin: auto; background-color: #7ab429; border: #fafafa;border-radius: 20%;color: #fafafa; width: 90%;height: 90%; text-align: center;text-decoration-color: #fafafa;display: inline-block;font-size: 0.8vw;}
        input{width: 100%; margin-bottom: 1%; height: 8%;}
        .topnav {background-color: #333;overflow: hidden; margin-bottom: 1%;}
        .topnav a {float: left;color: #f2f2f2;text-align: center;padding: 14px 16px;text-decoration: none;font-size: 17px;}
        .topnav a:hover {background-color: #ddd;color: rgb(59, 59, 59);}
        .topnav a.active {background-color: #7ab429;color: white;}
        .topnav a.right {Float:right;}
        table 			      { 
  margin-top: 5%;
  border-spacing: 1; 
  border-collapse: collapse; 
  background:#333;
  border-radius:6px;
  border-color: #7ab429;
  overflow:hidden;
  max-width:800px; 
  width:100%;
  margin: auto;
}
td, th {
  width: 4rem;
  height: 2rem;
  border: 1px solid #ccc;
  text-align: center;
}
th {
  background: #333;
  border-color: white;
}


	
      </style>
    <meta charset="utf-8" />
    <title>User-List</title>
  </head>
  <body>
       <div class="topnav">
        <a href="/">Home</a>
        <a class='active' href="/userlist">List</a>
        <a href="/userupdate">Update</a>
        <a class="right" href="/login">Login</a>
        <a class="right" href="/users">Register</a>
         </div>

     <table>
       <tr>
        <th>id</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Login</th>
        <th>idRoli</th>
        <th>Usuń</th>
      </tr>
    {{#each users}}
    {{#unless isDeleted}}
    <tr>
        <th>{{id}}</th>
        <th>{{FirstName}}</th>
        <th>{{LastName}}</th>
        <th>{{Login}}</th>
        <th>{{idRoli}}</th>
        <th><form action="/userlist" method="POST"> <button id={{id}}>Usuń</button></form></th>
         
      </tr>
      {{/unless}}
    {{/each}}

     </table>
     
  </body>
</html>